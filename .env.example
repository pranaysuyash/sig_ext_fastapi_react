# =============================================================================
# Signature Extractor Application Configuration
# =============================================================================
# Copy this file to .env and update the values for your environment
# 
# IMPORTANT: Never commit .env files with real secrets to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# CORE APPLICATION SETTINGS
# -----------------------------------------------------------------------------

# API Base URL for desktop app to connect to backend
# Default: http://127.0.0.1:8001 (matches backend default port)
API_BASE_URL=http://127.0.0.1:8001

# -----------------------------------------------------------------------------
# SECURITY SETTINGS
# -----------------------------------------------------------------------------

# JWT Secret Key - REQUIRED for authentication
# Generate a secure random key: openssl rand -hex 32
# NEVER use the example value in production!
JWT_SECRET=your_super_secret_jwt_key_here_replace_with_random_32_byte_hex

# JWT Algorithm (default: HS256)
JWT_ALGORITHM=HS256

# JWT Token expiration time in minutes (default: 30)
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# -----------------------------------------------------------------------------
# DATABASE CONFIGURATION
# -----------------------------------------------------------------------------

# Option 1: Use DATABASE_URL for simple configuration (recommended)
# For SQLite (local development):
DATABASE_URL=sqlite:///./signature_extractor.db

# For PostgreSQL (production):
# DATABASE_URL=postgresql://username:password@localhost:5432/signature_extractor

# Option 2: Use individual database settings (if DATABASE_URL not set)
# These are used to construct the database URL automatically
DATABASE_HOSTNAME=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=your_db_username
DATABASE_PASSWORD=your_db_password
DATABASE_NAME=signature_extractor

# -----------------------------------------------------------------------------
# PAYMENT INTEGRATION (Optional)
# -----------------------------------------------------------------------------

# Gumroad Integration
GUMROAD_PRODUCT_URL=https://gumroad.com/l/your-product-id

# Razorpay Integration (if using Razorpay instead of Gumroad)
# RAZORPAY_KEY_ID=your_razorpay_key_id
# RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# -----------------------------------------------------------------------------
# APPLICATION FEATURES
# -----------------------------------------------------------------------------

# Updates URL for checking new versions
UPDATES_URL=https://cdn.signkit.work/updates.json

# Enable/disable features
ENABLE_ANALYTICS=false
ENABLE_CRASH_REPORTING=false

# -----------------------------------------------------------------------------
# DEVELOPMENT SETTINGS
# -----------------------------------------------------------------------------

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable debug mode (shows more detailed error messages)
DEBUG=false

# Backend server host and port
BACKEND_HOST=127.0.0.1
BACKEND_PORT=8001

# -----------------------------------------------------------------------------
# DEPLOYMENT SETTINGS
# -----------------------------------------------------------------------------

# Environment (development, staging, production)
ENVIRONMENT=development

# Application version (auto-populated from VERSION file)
# APP_VERSION=1.0.0

# -----------------------------------------------------------------------------
# EXAMPLE CONFIGURATIONS
# -----------------------------------------------------------------------------

# Example 1: Local Development with SQLite
# API_BASE_URL=http://127.0.0.1:8001
# DATABASE_URL=sqlite:///./signature_extractor.db
# JWT_SECRET=dev_secret_key_replace_in_production
# DEBUG=true
# LOG_LEVEL=DEBUG

# Example 2: Production with PostgreSQL
# API_BASE_URL=https://api.yourapp.com
# DATABASE_URL=postgresql://user:pass@prod-db:5432/signature_extractor
# JWT_SECRET=super_secure_production_key_32_bytes_hex
# DEBUG=false
# LOG_LEVEL=INFO
# ENVIRONMENT=production

# Example 3: Docker Development
# API_BASE_URL=http://backend:8001
# DATABASE_URL=postgresql://postgres:password@db:5432/signature_extractor
# JWT_SECRET=docker_dev_secret_replace_me
# DEBUG=true